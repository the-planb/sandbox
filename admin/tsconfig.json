{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@planb/*": ["planb/*"],
      "@planb": ["planb"],
      //      "@components/*": ["src/components/*"],
      //      "@components": ["src/components"],
      "@crud/*": ["src/crud/*"],
      "@crud": ["src/crud"],
      "@contexts/*": ["src/contexts/*"],
      "@contexts": ["src/contexts"],
      "@i18n/*": ["src/i18n/*"],
      "@i18n": ["src/i18n"],
      "@styles/*": ["src/styles/*"],
      "@styles": ["src/styles"],
      //      "@model/*": ["src/model/*"],
      //      "@model": ["src/model"],
      "@public/*": ["public/*"],
      "@public": ["public"]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
