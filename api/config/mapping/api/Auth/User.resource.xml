<?xml version="1.0"?>
<resources xmlns="https://api-platform.com/schema/metadata/resources-3.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://api-platform.com/schema/metadata/resources-3.0 https://api-platform.com/schema/metadata/resources-3.0.xsd">
    <resource class="App\Auth\Domain\Model\User" routePrefix="auth" shortName="User">
        <operations>
            <operation class="ApiPlatform\Metadata\Get" uriTemplate="/profile"
                       provider="App\Auth\Framework\Api\State\ProfileProvider">
                <openapiContext>
                    <values>
                        <value name="summary">Retrieves the current user</value>
                    </values>
                </openapiContext>
            </operation>
            <operation class="ApiPlatform\Metadata\Get"
                       provider="App\Auth\Framework\Api\State\Provider\GetUserItemProvider">
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>get.item</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
                <cacheHeaders>
                    <cacheHeader name="shared_max_age">3600</cacheHeader>
                    <cacheHeader name="max_age">10</cacheHeader>
                </cacheHeaders>
            </operation>
            <operation class="ApiPlatform\Metadata\GetCollection"
                       provider="App\Auth\Framework\Api\State\Provider\GetUserCollectionProvider">
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>get.collection</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
                <cacheHeaders>
                    <cacheHeader name="shared_max_age">3600</cacheHeader>
                    <cacheHeader name="max_age">10</cacheHeader>
                </cacheHeaders>
            </operation>
            <operation class="ApiPlatform\Metadata\Post" input="App\Auth\Domain\Input\UserInput"
                       processor="App\Auth\Framework\Api\State\Processor\CreateUserProcessor">
                <denormalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>post</value>
                            </values>
                        </value>
                    </values>
                </denormalizationContext>
            </operation>
            <operation class="ApiPlatform\Metadata\Put" input="App\Auth\Domain\Input\UserInput"
                       processor="App\Auth\Framework\Api\State\Processor\UpdateUserProcessor">
                <denormalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>put</value>
                            </values>
                        </value>
                    </values>
                </denormalizationContext>
            </operation>
            <operation class="ApiPlatform\Metadata\Delete"
                       processor="App\Auth\Framework\Api\State\Processor\DeleteUserProcessor"/>
        </operations>
    </resource>
</resources>
