<?xml version="1.0"?>
<resources xmlns="https://api-platform.com/schema/metadata/resources-3.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://api-platform.com/schema/metadata/resources-3.0 https://api-platform.com/schema/metadata/resources-3.0.xsd">
    <resource class="App\Media\Domain\Model\Movie" routePrefix="media" shortName="Movie">
        <operations>
            <operation class="ApiPlatform\Metadata\Put"
                       input="App\Media\Application\UseCase\Rate\RateMovie"
                       processor="App\Media\Framework\Api\State\Processor\RateMovieProcessor"
                       uriTemplate="/movies/{id}/rate"
            >
                <denormalizationContext>
                    <values>
                        <value name="enable_max_depth">1</value>
                        <value name="groups">
                            <values>
                                <value>rate.movie</value>
                            </values>
                        </value>
                    </values>
                </denormalizationContext>
            </operation>
        </operations>
    </resource>
</resources>
